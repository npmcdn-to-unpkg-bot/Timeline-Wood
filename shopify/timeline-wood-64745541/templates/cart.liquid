<div id="cart" class="fs-grid">
  <div class="header--lg">
    <div class="fs-row cart-row">
      <div class="fs-cell fs-all-full">
        <h1 class="cart-title">Your Cart</h1>
      </div>
    </div>

    {% if cart.item_count > 0 %}
    <form action="/cart" method="post" class="cart-form header--lg">

      {% for item in cart.items %}
      <div class="cart-item fs-row cart-row">
        <div class="cart-item__thumb fs-cell fs-lg-4 fs-md-2 fs-sm-half"><img class="img-responsive" src="{{ item | img_url: 'large' }}"  alt="{{ item.title | escape }}" /></div>
        <div class="cart-item__desc fs-cell  fs-lg-8 fs-md-4 fs-sm-half">
          <div><span class="cart-item__title">{{ item.title }}</span></div>
          <div><span class="cart-item__price">{{ item.price | money }}</span></div>
        </div>
      </div>
      <hr class="invisible compact">
      {% endfor %}

      <div class="pinneds pinneds--bottom">
        <div class="fs-row cart-row">
          <hr class="divider compact fs-cell fs-all-full bg--gray">
          <div class="fs-cell fs-all-full">
            <h3 class="gamma color--white">Subtotal {{ cart.total_price | money }}</h3>
            <div class="fs-row">
              <div class="fs-cell fs-all-half"><input class="btn btn--full" type="submit" name="update" value="Update cart" /></div>
              <div class="fs-cell fs-all-half"><input class="btn btn--full" type="submit" name="checkout" value="Check out" /></div>
            </div>
          </div>
        </div>
      </div>

    </form>
    {% else %}
    <div class="header--lg">
      <div class="fs-row cart-row">
        <div class="fs-cell fs-all-full">
          <div class="color--white">It appears that your cart is currently empty.</div>
          <div class="color--white">You can continue browsing <a href="/collections/all">here</a>.</div>
        </div>
      </div>
    </div>
    {% endif %}
  </div>
</div>


