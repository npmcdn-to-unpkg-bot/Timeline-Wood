{% assign sizesArray = sizes | split: ' ' %}

<img class="img--srcset{% if img_class %} {{ img_class }}{% endif %}"
  sizes="
    (max-width: 750px) {{ sizesArray[0] }},
    (max-width: 990px) {{ sizesArray[1] }},
    (max-width: 1400px) {{ sizesArray[2] }},
    {{ sizesArray[3] }}"
  srcset="
    {{ img_src | img_url: 'small' }} 160w,
    {{ img_src | img_url: 'medium' }} 240w,
    {{ img_src | img_url: 'large' }} 480w,
    {{ img_src | img_url: 'grande' }} 600w,
    {{ img_src | img_url: '1024x1024' }} 1024w,
    {{ img_src | img_url: 'master' }} 2048w"
  alt="{{ img_alt | escape }}"
>
